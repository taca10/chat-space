.content
  = render partial: 'common/sider', locals: {groups: @groups}
  .content__right
    .content__right--header
      = link_to edit_group_path(@group) do
        .content__right--header--edit
          .content__right--header--edit--form
            Edit
      .content__right--header--name
        = @group.name
        .content__right--header--user
          member
          - @users.each do |user|
            = user.name
    .content__right--body
      %ul.content__right--body--chat
        %li.content__right--body--chat--one
          %h3.username tabata
          %p.date 2017/3/16
          %p.time 04:53:06
          %p.message chat-spaceまだ？
        %li.content__right--body--chat--one
          %h3.group-name フットサル
          %p.date 2017/3/17
          %p.time 05:00:00
          %p.message 楽しい
    .content__right--bottom
      = form_for [@group, @message] do |f|
        = f.text_field :text, placeholder: 'type a message', value: ''
        %i.fa.fa-photo
        = f.submit 'Sent', class: 'form'
