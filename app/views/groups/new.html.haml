.chat-group-form
  %h1 新規チャットグループ
  = form_for @group do |f| 
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        .chat-group-form__label
          = f.label :グループ名
      .chat-group-form__field--right
        .chat-group-form__label
          = f.text_field :name, :placeholder => "グループ名を入力してください", id: "chat_group_name", class: "chat-group-form__input"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        .chat-group-form__label
          %f.label チャットメンバーを追加
      .chat-group-form__field--right
        .chat-group-form__search.clearfix
          .chat-group-form__input
            = collection_check_boxes(:post, :user_ids, User.all, :id, :name) do |b|
              = b.label { b.check_box + b.text }
        #user-search-result
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        .chat-group-form__label
          %f.label チャットグループ
      .chat-group-form__field--right
        #chat-group-users
          #chat-group-user-22.chat-group-user.clearfix
            %input{:name => "chat_group[user_ids][]", :type => "hidden", :value => "22"}/
            %p.chat-group-user__name seo_kyohei
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit 'Save', class: "chat-group-form__action-btn"
